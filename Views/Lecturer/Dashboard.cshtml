@{
    ViewData["Title"] = "Lecturer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Lecturer Dashboard</h1>
</div>

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Pending Claims</h6>
                        <h3 class="mb-0">@ViewBag.PendingClaims</h3>
                    </div>
                    <i class="fas fa-clock fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Approved Claims</h6>
                        <h3 class="mb-0">@ViewBag.ApprovedClaims</h3>
                    </div>
                    <i class="fas fa-check-circle fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total Earned</h6>
                        <h3 class="mb-0">R00.00</h3>
                    </div>
                    <i class="fas fa-money-bill-wave fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">This Month</h6>
                        <h3 class="mb-0">@ViewBag.MonthlyHours h</h3>
                    </div>
                    <i class="fas fa-clock fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-bolt text-warning me-2"></i>Quick Actions</h5>
                <div class="row">
                    <div class="col-md-4">
                        <a href="@Url.Action("Create", "Claims")" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-plus-circle me-2"></i>Submit New Claim
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "Claims")" class="btn btn-info w-100 mb-2">
                            <i class="fas fa-file-alt me-2"></i>View All Claims
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "Documents")" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-upload me-2"></i>Upload Documents
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Claims Table -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Recent Claims</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Claim Reference</th>
                                <th>Month/Year</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var claim in Model)
                                {
                                    <tr>
                                        <td><strong>@claim.ClaimReference</strong></td>
                                        <td>@claim.MonthYear</td>
                                        <td>@claim.HoursWorked h</td>
                                        <td>R@claim.TotalAmount.ToString("N2")</td>
                                        <td>
                                            <span class="badge @(claim.Status == "Pending" ? "bg-warning" :
                                                                 claim.Status == "Approved" ? "bg-success" :
                                                                 claim.Status == "Paid" ? "bg-info" : "bg-danger") status-badge">
                                                @claim.Status
                                            </span>
                                        </td>
                                        <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Claims", new { id = claim.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <!-- Sample data for demo -->
                                <tr>
                                    <td><strong>CLM-20250315-7432</strong></td>
                                    <td>March 2025</td>
                                    <td>45h</td>
                                    <td>R4,500.00</td>
                                    <td><span class="badge bg-warning status-badge">Pending</span></td>
                                    <td>2025-03-15</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>CLM-20250215-5621</strong></td>
                                    <td>February 2025</td>
                                    <td>38h</td>
                                    <td>R3,800.00</td>
                                    <td><span class="badge bg-success status-badge">Approved</span></td>
                                    <td>2025-02-15</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>CLM-20250115-3421</strong></td>
                                    <td>January 2025</td>
                                    <td>42h</td>
                                    <td>R4,200.00</td>
                                    <td><span class="badge bg-info status-badge">Paid</span></td>
                                    <td>2025-01-15</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>